name: CI

on:
  pull_request:
  workflow_dispatch:

jobs:
  ci:
    name: Building ${{ matrix.file }}
    runs-on: ubuntu-latest
    strategy:
      fail-fast: false
      matrix:
        file:
          # - tesla-ble-esp32-generic.yml
          # - tesla-ble-m5stack-atoms3.yml
          # - tesla-ble-m5stack-nanoc6.yml
          - tesla-ble.yml
    steps:
      - uses: actions/checkout@v4.2.2
      - name: Mock secrets.yaml from example
        run: cp secrets.yaml.example secrets.yaml
      - name: Mock tesla-ble.yml from example
        run: cp tesla-ble.yml.example tesla-ble.yml
      - name: Build ESPHome firmware to verify configuration
        uses: esphome/build-action@v6.0.0
        with:
          yaml-file: ${{ matrix.file }}
